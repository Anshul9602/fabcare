<div id="product-product mt-10" class="container mb-5">
	<div class="row">
		<div id="content" class="col-sm-12">{{ content_top }}
			<div class="row">
				<div class="col-sm-1 mob_dnone border_a">
					{% if thumb or images %}
					<ul class="slider slider-nav " style="height:100%">
						{% if thumb %}
						<li><img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" /></li>
						{% endif %}
						{% if images %}
						{% for image in images %}
						<li class="image-additional">
							<img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
						</li>
						{% endfor %}
						{% endif %}
					</ul>
					{% endif %}

				</div>
				<div class="col-sm-6">
