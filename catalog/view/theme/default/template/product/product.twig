<style>
	/****radio css***/
	.radio-custom label {
		
		display: inline-block;
		margin-right: 15px;
		cursor: pointer;
		font-weight: 500;
		position: relative;
		overflow: hidden;
		margin-bottom: 0.375em;
		float: left;
		
	}

	.fix_st p {
		margin-bottom: 0px !important;
	}

	.radio-custom label input {
		position: absolute;
		left: -9999px;
	}

	.radio-custom label input:checked+span {
		background-color: #d97676;
		color: #fff;
	}

	.radio-custom label span {
		display: flex;
		align-items: center;
		padding: 10px 15px;
		border-radius: 25px;
		transition: 0.25s ease;
		background-color: #fff;
		border: thin solid #333;
	}

	.arrow {
		display: none !important;
	}

	.slick-active div {
		display: flex;
		justify-content: center;
	}

	.plocationbox {
		display: none !important;
	}
	.alert-dismissible{
		display:none !important;
	}
	.border_a .slick-current {
       width: 100% !important;
    border: 4px solid #4a4975 !important;
}
	.border_a .slick-list {
       height: 700px !important;
    
}
.sc{
	height: 100vh;
    overflow: auto;
}
.sc::-webkit-scrollbar {
    display: none;
}
